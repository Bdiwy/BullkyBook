@model Category

@{
    ViewData["Title"] = "Create Category";
}

<div class="card mb-4">
    <div class="card-body">
        <a asp-action="Index" class="btn btn-dark mb-4">Back To Category</a>

        <form asp-action="Store" method="post">
            <div class="mb-3">
                <label asp-for="Name" class="form-label"></label>
                <input asp-for="Name" class="form-control" required />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="DisbplayOrder" class="form-label"></label>
                <input asp-for="DisbplayOrder" class="form-control" required />
                <span asp-validation-for="DisbplayOrder" class="text-danger"></span>
            </div>

            <button type="submit" class="btn btn-success">Create Category</button>
        </form>
    </div>
</div>
