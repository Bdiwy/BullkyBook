@model IPagedList<BullkyBook.Models.Category>

    @{
    ViewData["Title"] = "Category Page";
    Layout = "_LayoutWithSidebar";
    }

    <div class="row">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h2 class="mb-0"><i class="bi bi-tags"></i> Category List</h2>
                <a asp-action="Create" class="btn btn-primary">
                    <i class="bi bi-plus-circle"></i> Create New Category
                </a>
            </div>

            <hr />
            <div class="d-flex justify-content-end align-items-center mb-3">
                <div>
                    <label for="pageSize" class="form-label me-2">Rows per page:</label>
                    <select id="pageSize" class="form-select d-inline-block">
                        @foreach (var size in ViewBag.PageSizes as List<int>)
                            {
                            if (size == ViewBag.PageSize)
                            {
                            <option value="@size" selected>@size</option>
                            }
                            else
                            {
                            <option value="@size">@size</option>
                            }
                            }
                    </select>
                </div>
            </div>
            <div class="card mb-4">
                <div class="card-body">

                    <table class="table table-bordered" style="width: 100%;">
                        <thead>
                            <tr>
                                <th>#</th>
                                <th>Name</th>
                                <th>Display Order</th>
                                <th>Date Time</th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            @{
                            int count = (Model.PageNumber - 1) * Model.PageSize + 1;
                            }
                            @foreach (var obj in Model)
                            {
                            <tr class="align-middle">
                                <td>@{
                                    @count;
                                    count++;
                                    }</td>
                                <td>@obj.Name</td>
                                <td>@obj.DisbplayOrder</td>
                                <td>@obj.CreatedDateTime.ToString("yyyy-MM-dd HH:mm")</td>
                                <td>
                                    <div class="d-flex gap-2 flex-wrap">
                                        <a asp-action="Edit" asp-route-id="@obj.Id" class="btn">
                                            <i class="bi bi-pencil-square"></i> Edit
                                        </a>
                                        <a asp-action="Details" asp-route-id="@obj.Id" class="btn">
                                            <i class="bi bi-journal-text"></i> Details
                                        </a>
                                        <button type="button" class="btn"
                                            data-bs-toggle="modal" data-bs-target="#deleteModal" data-id="@obj.Id"
                                            data-name="@obj.Name">
                                            <i class="bi bi-trash"></i> Delete
                                        </button>
                                    </div>
                                </td>
                            </tr>
                            }
                        </tbody>
                    </table>

                </div>
            </div>
        </div>
    </div>
    </div>
    <div class="d-flex justify-content-center mt-3">
        @Html.PagedListPager(Model, page => Url.Action("Index", new { page, pageSize = ViewBag.PageSize
        }),
        new PagedListRenderOptions
        {
        LiElementClasses = new[] { "page-item" },
        PageClasses = new[] { "page-link" }
        })
    </div>

    @await Html.PartialAsync("_DeleteModal")
    <script src="~/js/deleteModal.js"></script>

    <script>
        document.getElementById("pageSize").addEventListener("change", function() {
            const selectedSize = this.value;
            window.location.href = '@Url.Action("Index", "Category")' + '?pageSize=' + selectedSize;
        });
    </script>