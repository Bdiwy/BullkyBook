@{
    ViewData["Title"] = "User Profile";
}

<style>
    body {
        background: linear-gradient(to bottom, #1a0033, #0b0220);
        color: #e6e6e6;
    }

    .profile-card {
        background: rgba(255, 255, 255, 0.05);
        backdrop-filter: blur(10px);
        border: 1px solid rgba(255, 255, 255, 0.15);
        border-radius: 15px;
        transition: all 0.3s ease;
    }

    .profile-card:hover {
        border-color: rgba(255, 255, 255, 0.3);
        transform: translateY(-2px);
    }

    .profile-avatar {
        width: 120px;
        height: 120px;
        object-fit: cover;
        border-radius: 50%;
        border: 3px solid #ffffff33;
        transition: all 0.3s ease;
    }

    .profile-avatar:hover {
        border-color: #58a6ff;
    }

    label {
        color: #cccccc;
    }

    .form-control {
        background-color: rgba(255, 255, 255, 0.1);
        border: 1px solid rgba(255, 255, 255, 0.2);
        color: #fff;
    }

    .form-control:focus {
        background-color: rgba(255, 255, 255, 0.15);
        border-color: #58a6ff;
        color: #fff;
        box-shadow: none;
    }

    .btn-save {
        background-color: #6a0dad;
        border: none;
        color: #fff;
        font-weight: bold;
        transition: background-color 0.3s ease;
    }

    .btn-save:hover {
        background-color: #580c9c;
    }

    .text-muted {
        color: #999 !important;
    }
</style>

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-10 col-lg-8">
            <div class="card profile-card shadow-lg p-4">
                <div class="text-center mb-4">
                    <img src="~/img/user-avatar.svg" alt="Profile Picture" class="profile-avatar mb-3">
                    <h3 class="fw-bold text-white">@ViewData["Title"]</h3>
                    <p class="text-muted mb-0">Manage your account details</p>
                </div>
                <hr />

                <form asp-action="SaveProfile" method="post">
                    <div class="row g-3">
                        <div class="col-md-6">
                            <label class="form-label">First Name</label>
                            <input type="text" name="FirstName" class="form-control" placeholder="John" value="John" />
                        </div>
                        <div class="col-md-6">
                            <label class="form-label">Last Name</label>
                            <input type="text" name="LastName" class="form-control" placeholder="Doe" value="Doe" />
                        </div>

                        <div class="col-md-6">
                            <label class="form-label">Email</label>
                            <input type="email" name="Email" class="form-control" placeholder="john@example.com" value="john@example.com" />
                        </div>

                        <div class="col-md-6">
                            <label class="form-label">Phone</label>
                            <input type="text" name="Phone" class="form-control" placeholder="+1 234 567 890" />
                        </div>

                        <div class="col-md-6">
                            <label class="form-label">New Password</label>
                            <input type="password" name="Password" class="form-control" placeholder="••••••••" />
                        </div>

                        <div class="col-md-6">
                            <label class="form-label">Confirm Password</label>
                            <input type="password" name="ConfirmPassword" class="form-control" placeholder="••••••••" />
                        </div>

                        <div class="col-12 mt-4 text-center">
                            <button type="submit" class="btn btn-save px-5 py-2 rounded-pill">
                                Save Changes
                            </button>
                        </div>
                    </div>
                </form>
            </div>

            <div class="text-center mt-4 small text-muted">
                &copy; @DateTime.Now.Year Your Website Name. All rights reserved.
            </div>
        </div>
    </div>
</div>
