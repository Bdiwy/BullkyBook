@model IPagedList<BullkyBook.Models.Product>
@{
    ViewData["Title"] = "Product Page";
    Layout = "_LayoutWithSidebar";
}



<div class="row">
    <div class="col-12">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h2 class="mb-0"><i class="bi bi-box-seam"></i> Product List</h2>
            <a asp-action="Create" class="btn btn-dark">
                <i class="bi bi-plus-circle"></i> Create New Product
            </a>
        </div>

        <hr />
        <div class="alertMessage"></div>
        <div class="d-flex justify-content-end align-items-center mb-3">
            <div>
                <label for="pageSize" class="form-label me-2" style="color:white;">Rows per page:</label>
                <select id="pageSize" class="form-select d-inline-block">
                    @foreach (var size in ViewBag.PageSizes as List<int>)
                    {
                        if (size == ViewBag.PageSize)
                        {
                            <option value="@size" selected>@size</option>
                        }
                        else
                        {
                            <option value="@size">@size</option>
                        }
                    }
                </select>
            </div>
        </div>
        <div class="card mb-4">
            <div class="card-body">

                <table class="table table-bordered" style="width: 100%;">
                    <thead>
                        <tr>
                            <th>#</th>
                            <th>Name</th>
                            <th>In Stock</th>
                            <th>Category</th>
                            <th>Date Time</th>
                        </tr>
                    </thead>
                    <tbody>
                        @{
                            int count = (Model.PageNumber - 1) * Model.PageSize + 1;
                        }
                        @if (Model.Count == 0)
                        {
                            <tr>
                                <td colspan="5" class="text-center text-danger">No products available.</td>
                            </tr>
                        }
                        @foreach (var obj in Model)
                        {
                            <tr class="align-middle">
                            <td>
                            @{
                                @count;
                                count++;
                            }
                            </td>
                            <td>@obj.Name</td>
                            <td>@obj.QtyInStock</td>
                            <td> <a asp-action="Details" asp-controller="Category" asp-route-id="@obj.Category?.Id">
                            @obj.Category?.Name</a></td>
                            <td>@obj.CreatedDateTime.ToString("yyyy-MM-dd HH:mm")</td>
                            <td>
                                <div class="d-flex gap-2 flex-wrap">
                                    <a asp-action="Edit" asp-route-id="@obj.Id" class="btn">
                                        <i class="bi bi-pencil-square"></i> Edit
                                    </a>
                                    <a asp-action="Details" asp-route-id="@obj.Id" class="btn">
                                        <i class="bi bi-journal-text"></i> Details
                                    </a>
                                    <button type="button" class="btn" data-bs-toggle="modal"
                                        data-bs-target="#deleteModal" data-id="@obj.Id" data-name="@obj.Name">
                                        <i class="bi bi-trash"></i> Delete
                                    </button>
                                </div>
                            </td>
                        </tr>
                    }
                    </tbody>
                </table>

            </div>
        </div>
    </div>
</div>
</div>
<div class="d-flex justify-content-center mt-3">
    @Html.PagedListPager(Model, page => Url.Action("Index", new { page, pageSize = ViewBag.PageSize
        }),
        new PagedListRenderOptions
        {
            LiElementClasses = new[] { "page-item" },
            PageClasses = new[] { "page-link" }
        })
</div>

<script>
    document.getElementById("pageSize").addEventListener("change", function () {
        const selectedSize = this.value;
        window.location.href = '@Url.Action("Index", "Product")' + '?pageSize=' + selectedSize;
    });
</script>