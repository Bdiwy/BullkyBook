@inject Microsoft.AspNetCore.Mvc.Localization.IViewLocalizer Localizer
<!DOCTYPE html>
<html lang="@System.Threading.Thread.CurrentThread.CurrentCulture.TwoLetterISOLanguageName">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - BullkyBook</title>
    <script type="importmap"></script>
    <link rel="stylesheet" href="~/css/bootswatch.css"/>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/BullkyBook.styles.css" asp-append-version="true" />
</head>
<body class="sidebar-body">
    <header>
        <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
            <div class="container-fluid">
                <button class="btn btn-link text-light d-lg-none me-2" id="sidebarToggle">
                    <i class="bi bi-list" style="font-size: 1.5rem;"></i>
                </button>
                <a class="navbar-brand fw-bold" asp-area="" asp-controller="Home" asp-action="Index">
                    <i class="bi bi-book"></i> BullkyBook
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" 
                        aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav ms-auto">
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Index">
                                <i class="bi bi-house"></i> @Localizer["Home"]
                            </a>
                        </li>
                        &nbsp;
                        <li class="nav-item">
                            <a class="nav-link" href="#" onclick="event.preventDefault(); document.getElementById('sidebarToggle').click();">
                                <i class="bi bi-list"></i> @Localizer["Menu"]
                            </a>
                        </li>
                        &nbsp;
                        &nbsp;
                        <!-- Language Dropdown -->
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" id="langDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                <i class="bi bi-translate"></i> @Localizer["Language"]
                            </a>
                            <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="langDropdown">
                                <li>
                                    @{
                                        var routeValues = new Dictionary<string, object>();
                                        routeValues["culture"] = "en";
                                        routeValues["controller"] = ViewContext.RouteData.Values["controller"] ?? "Home";
                                        routeValues["action"] = ViewContext.RouteData.Values["action"] ?? "Index";
                                        if (ViewContext.RouteData.Values.ContainsKey("id"))
                                        {
                                            routeValues["id"] = ViewContext.RouteData.Values["id"];
                                        }
                                    }
                                    <a class="dropdown-item" href="@Url.RouteUrl("localized", routeValues)">
                                        English
                                    </a>
                                </li>
                                <li>
                                    @{
                                        var routeValuesAr = new Dictionary<string, object>();
                                        routeValuesAr["culture"] = "ar";
                                        routeValuesAr["controller"] = ViewContext.RouteData.Values["controller"] ?? "Home";
                                        routeValuesAr["action"] = ViewContext.RouteData.Values["action"] ?? "Index";
                                        if (ViewContext.RouteData.Values.ContainsKey("id"))
                                        {
                                            routeValuesAr["id"] = ViewContext.RouteData.Values["id"];
                                        }
                                    }
                                    <a class="dropdown-item" href="@Url.RouteUrl("localized", routeValuesAr)">
                                        عربي
                                    </a>
                                </li>
                            </ul>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    
    <div class="wrapper">
        @await Html.PartialAsync("_Sidebar")
        
        <main class="main-content">
            <div class="container-fluid py-4">
                @RenderBody()
            </div>
        </main>
    </div>
    
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="~/js/sidebar.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
